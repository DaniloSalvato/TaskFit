<%- include('../partials/head.ejs') %>
    <%- include('../partials/menu.ejs') %>

        <br>
        <div class="container">
            <a href="/tarefas/novo" class="btn btn-primary">Nova tarefa</a>
            <br>
            <div class="card">
                <div class="card-header">
                    Tarefas
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <th>Titulo</th>
                            <th>Matéria</th>
                            <th>Data final</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </thead>
                        <tbody>
                            <% Tarefas.forEach(tarefas=> { %>
                                <tr>
                                    <td>
                                        <%= tarefas.titulo %>
                                    </td>
                                    <td>
                                        <%= tarefas.materia %>
                                    </td>
                                    <td>
                                        <%= tarefas.fechamento %>
                                    </td>
                                    <td>
                                        <%= tarefas.status %>
                                    </td>
                                    <td>
                                        <a href="/tarefas/editar/<%= tarefas.id %>" class="btn btn-primary">Editar</a>
                                        <a href="/tarefas/excluir/<%= tarefas.id %>" class="btn btn-danger">Excluir</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <%- include('../partials/footer.ejs') %>